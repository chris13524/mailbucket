import bucket.Email
import bucket.Header

model {
	Email email
}

json {
	smtpTo email.smtpTo
	smtpFrom email.smtpFrom
	to email.to
	from email.from
	subject email.subject
	body email.body
	headers renderHeaders(email.headers)
}

String renderHeaders(Set<Header> headers) {
	String res = "["
	for (Header header : headers) {
		res += '"' + header.name + '":"' + header.value + '",'
	}
	res += "]"
	return res
}